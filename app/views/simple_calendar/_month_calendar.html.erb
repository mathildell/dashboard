<div class="simple-calendar">
  <div class="calendar-heading">
    <h3><%= Date.today.strftime("%A") %></h3>
    <%= link_to t('simple_calendar.previous', default: '&lt;').html_safe, calendar.url_for_previous_view %>
    <span class="calendar-title">
      <%= t('date.month_names')[start_date.month] %> <%= start_date.year %>
      <%# Date.today.strftime("%B %Y") %></span>
    <%= link_to t('simple_calendar.next', default: '&gt;').html_safe, calendar.url_for_next_view %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= (t('date.abbr_day_names')[day.wday])[0,1] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
              <% else %>
                <%= day.day %>
                <% if sorted_events.fetch(day, []).present? %>
                <% events = sorted_events.fetch(day, []) %>
                  <% events.each do |event| %>
                  <div> <span class="<%= event.category %> <%= event.icon %>"></span> </div>
                  <% end %>
                <% end %>
                <%# block.call day.day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
